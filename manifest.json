{
  "manifest_version": 2,

  "name": "Astronow",
  "description": "This extension shows lunarliving.org's real time planet transitions",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/",
    "http://www.lunarliving.org/articles.html#today"
  ]

}
